{
  "name": "kanban-board",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "format": "prettier --write .",
    "type-check": "tsc --noEmit",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f postgres",
    "docker:clean": "docker-compose down -v --remove-orphans",
    "db:generate": "npx prisma generate",
    "db:migrate": "npx prisma migrate dev",
    "db:migrate:deploy": "npx prisma migrate deploy",
    "db:reset": "npx prisma migrate reset --force",
    "db:seed": "npx tsx database/seed.ts",
    "db:studio": "npx prisma studio",
    "db:setup": "npm run docker:up && npm run db:wait && npm run db:migrate && npm run db:functions && npm run db:seed",
    "db:wait": "sleep 5",
    "db:functions": "npm run db:apply-sql-functions",
    "db:apply-sql-functions": "docker cp database/functions.sql kanban_postgres:/tmp/functions.sql && docker exec kanban_postgres psql -U kanban_db -d kanban_board_prod -f /tmp/functions.sql",
    "db:apply-sql-functions-alt": "node scripts/apply-functions.js",
    "dev:full": "npm run db:setup && npm run dev"
  },
  "prisma": {
    "schema": "database/schema.prisma",
    "seed": "npx tsx database/seed.ts"
  },
  "dependencies": {
    "@prisma/client": "^6.12.0",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tooltip": "^1.2.7",
    "@tanstack/react-query": "^5.83.0",
    "@tanstack/react-query-devtools": "^5.83.0",
    "bcryptjs": "^3.0.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cookie": "^1.0.2",
    "framer-motion": "^12.23.12",
    "lucide-react": "^0.526.0",
    "next": "15.4.4",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "tailwind-merge": "^3.3.1",
    "tw-animate-css": "^1.3.6"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.4.4",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.3",
    "jsonwebtoken": "^9.0.2",
    "prettier": "3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "prisma": "^6.12.0",
    "tailwindcss": "^4",
    "tsx": "^4.19.3",
    "typescript": "^5.8.3",
    "zod": "^4.0.10"
  }
}
